    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug current test file(mvc)",
        "type": "node",
        "request": "launch",
        "env": {
          "DEBUG": "true",
          "BROWSER": "chromium"
        },
        "runtimeExecutable": "npm",
        "args": [
          "test",
          "mvc/${fileBasename}"
        ],
        "cwd": "${workspaceRoot}",
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      },
      {
        "name": "Debug current test file(angular)",
        "type": "node",
        "request": "launch",
        "env": {
          "DEBUG": "true",
          "BROWSER": "chromium"
        },
        "runtimeExecutable": "npm",
        "args": [
          "test",
          "angular/${fileBasename}"
        ],
        "cwd": "${workspaceRoot}",
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      }
    ]
  }
  