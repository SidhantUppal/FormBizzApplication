@using System.Threading.Tasks
@using FormBizz.Authorization
@using FormBizz.Web.Areas.FormBizz.Startup
@{
    ViewBag.CurrentPageName = FormBizzPageNames.Host.Editions;
}

@section Styles
{
    <link rel="stylesheet" abp-href="/view-resources/Areas/FormBizz/Views/_Bundles/edition-list.css" asp-append-version="true"/>
}

@section Scripts
{
    <script abp-src="/view-resources/Areas/FormBizz/Views/_Bundles/edition-list.js" asp-append-version="true"></script>
}

<abp-page-subheader title="@L("Editions")" description="@L("EditionsHeaderInfo")">
    @if (IsGranted(AppPermissions.Pages_Editions_Create))
    {
        <button id="CreateNewEditionButton" class="btn btn-primary">
            <i class="fa fa-plus"></i> @L("CreateNewEdition")
        </button>
    }
</abp-page-subheader>

<div class="@(await GetContainerClass())">
    <div class="card">
        <div class="card-body">
            <div class="align-items-center">
                <table id="EditionsTable" class="table align-middle table-row-dashed fs-6 gy-5 dataTable dtr-inline no-footer">
                    <thead>
                    <tr>
                        <th></th>
                        <th>@L("Actions")</th>
                        <th>@L("EditionName")</th>
                        <th>@L("Price")</th>
                        <th>@L("IsTrialActive")</th>
                        <th>@L("WaitingDayAfterExpire")</th>
                        <th>@L("ExpiringEdition")</th>
                    </tr>
                    </thead>
                </table>
            </div>

        </div>
    </div>
</div>